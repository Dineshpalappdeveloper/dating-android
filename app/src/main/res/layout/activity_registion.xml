<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistionActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/ColorPrimary"
        android:orientation="vertical"
        android:layout_height="300dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Dear"
            android:textColor="@color/white"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="28dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="105dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:text="Please Provide all details"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/NumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="-108dp"
        android:visibility="visible"
        app:cardCornerRadius="36dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ImageView2"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/UserImage"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile_ic"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="Upload Image" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">


                <EditText
                    android:id="@+id/UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:hint="Name"
                    android:background="@color/white"
                    android:inputType="text" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">


                <EditText
                    android:id="@+id/UserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:background="@color/white"
                    android:inputType="textEmailAddress" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp">


                <EditText
                    android:id="@+id/UserCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="10dp"
                    android:hint="City"
                    android:background="@color/white"
                    android:inputType="text" />

            </androidx.cardview.widget.CardView>

            <CheckBox
                android:id="@+id/TermsCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="Terms and Condition Accepted then click on box" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Next"
                android:background="@drawable/button_ad"
                android:textAllCaps="false" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
</androidx.core.widget.NestedScrollView>